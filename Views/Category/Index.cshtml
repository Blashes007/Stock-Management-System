@model IEnumerable<TestForASPCORE.Models.ProductCategory>
@{
    ViewData["Title"] = "Index";
}
<script src="~/js/Delete.js" asp-append-version="true"></script>
<h1>Category</h1>


<div class="" style="float:right; ">
    <form asp-controller="Category" asp-action="Index">
        <span class="btn-group">
            <input name="searchText" id="txtSearch" type="text" class="form-control" />


        </span>
        <input type="submit" id="btnSearch" value="Search" class="btn btn-primary" style="float:right;" />
    </form>

</div>

<div id="grdCategory" style="margin:auto;">
    <div class="table-responsive-sm align-middle">
        <table class="table table-bordered table-sm" id="categoryTable">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Actions
                    </th>


                </tr>
            </thead>
            <tbody>
                @if (Model.Count() != 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Update", new { id = item.id, item.name }, new { @class = "btn btn-success" })
                                <a class="btn btn-danger deleteAllItem" data-id="@item.id" data-controller="Category" data-action="delete" data-body-message="Are you sure?"> Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">No Record Found!</td>
                    </tr>
                }

            </tbody>
        </table>
        <input id="txtDisplayError" type="text" style="display:none;" data-message="@ViewBag.Message2" />
    </div>


</div>
<p class="float-right">
    <br />
    <a asp-action="Insert" class="btn btn-primary">Create New</a>
</p>
