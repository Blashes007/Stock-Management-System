@model IEnumerable<TestForASPCORE.Models.Supplier>

@{
    ViewData["Title"] = "Index";
}

<h1>Customer Details</h1>

<div class="float-right">
    <form asp-controller="Customer" asp-action="Index">
        <span class="btn-group">
            <input name="searchText" id="txtSearch" type="text" class="form-control" />
            <input type="submit" id="btnSearch" value="Search" class="btn btn-primary" />
        </span>

    </form>

</div>
<div class="table-responsive-md">
    <table class="table table-bordered table-md" id="suppllierTable">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Customer Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Phone
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() != 0)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.phone)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Update", new { id = item.id, item.name, item.email, item.phone }, new { @class = "btn btn-success" })
                            <a class="btn btn-danger deleteAllItem" data-id="@item.id" data-controller="Customer" data-action="Delete" data-body-message="Are you sure?"> Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No Record Found!</td>
                </tr>
            }

        </tbody>
    </table>
</div>

<p class="float-right">
    <br />
    <a asp-action="Insert" class="btn btn-primary">Add</a>
</p>